    //diagnostic
    "diagnostic.signOffset": 9999999,
    "diagnostic.errorSign": "‚úó",
    "diagnostic.warningSign": "‚ö†",
    "diagnostic.displayByAle": false,
    "diagnostic.refreshOnInsertMode": false,

    //Snippet
    "coc.preferences.snippetStatusText": "üÖ¢ ",
    "snippets.userSnippetsDirectory": "~/.config/nvim/snippets",
    "snippets.snipmate.author": "forest9643",
    "snippets.snipmate.enable": false,
    "snippets.ultisnips.directories": [
        "UltiSnips"
    ],

    //prettier
    "coc.preferences.formatOnType": true,
    "coc.preferences.formatOnSaveFiletypes": ["markdown", "python"],
    "coc.preferences.willSaveHandlerTimeout": 1000,
    "coc.preferences.colorSupport": true,
    // FIXME: 2020-03-09, bug of coc?
    // enableFloatHighlight will cause
    // many vim instance start but will not exit.
    "coc.preferences.enableFloatHighlight": true,

    //python
    "python.pythonPath": "/usr/local/bin/python3",
    "python.formatting.provider": "black",
    "python.linting.enabled": true,
    "python.linting.flake8Enabled": true,

    //git
    "git.enableGutters": true,
    "git.branchCharacter":"Ôêà",
    "git.addedSign.hlGroup": "GitGutterAdd",
    "git.changedSign.hlGroup": "GitGutterChange",
    "git.removedSign.hlGroup": "GitGutterDelete",
    "git.topRemovedSign.hlGroup": "GitGutterDelete",
    "git.changeRemovedSign.hlGroup": "GitGutterChangeDelete",

    "languageserver": {
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                },
                "highlight": { "lsRanges" : true }
            }
        },
        "golang": {
            "command": "gopls",
            "args": [],
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        }
    }
}
